<div class="container p-5">
    {{#each blocks}}
    <div class="p-2">
        <div class="card animated flipInY">
            <div class="card-header bg-dark text-white text-center">
                <h5 class="card-title">Block {{ index }} <small class="text-muted"></small></h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span class="">Hash</span>
                    <br>
                    <div class="text-truncate" style="color:blue;">
                        <small>{{ hash }}</small>
                    </div>
                    <br>
                    <span class="">Hash of previous block</span>
                    <br>
                    <div class="text-truncate" style="color:red;">
                        <small>{{ lastHash }}</small>
                    </div>
                </li>
                <li class="list-group-item">
                    <span class="">Transaction</span><br>
                    <div class="text-truncate text-muted" >
                        <small style="color:teal;">
                            {{#each data }}
                            {{id}}
                            {{/each}}
                        </small>
                    </div>
                </li>
                <li class="list-group-item">
                    <span class="">Nonce</span><br>
                    <div class="text-truncate text-muted">
                        <small>{{ nonce }}</small>
                    </div>
                </li>
                <li class="list-group-item">
                    <span class="">Difficulty</span><br>
                    <div class="text-truncate text-muted">
                        <small>{{ difficulty }}</small>
                    </div>
                </li>
                <li class="list-group-item">
                    <span class="">Timestamp</span><br>
                    <div class="text-truncate text-muted">
                        <small>{{ timestamp }}</small>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    {{/each}}
</div>