<div class="container p-5">
    <div class="col align-self-center">
        <form action="/mine" method="post">
            <div class="card animated flipInY">
                <div class="card-header bg-dark text-white text-center">
                    <h3>start mining</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="idPeer">Star Minig:</label>
                        <input type="text" id="peer" name="idPeer" class="form-control" value="{{ publicKey }}" placeholder="{{publicKey}}" disabled>
                    </div>
                    <div class="form-group" >
                        <center>
                        <div id="canvas"></div>
                        </center>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">mine</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>