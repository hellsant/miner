<div class="container-fluid p-5">
    <div class="col-md-7 offset-md-3">
        <form action="/send" method="post">
            <div class="card animated flipInY">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Realizar Transferencia</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="idPeer">Tu Id walled:</label>
                        <div class="input-group">
                            <input type="text" id="peer" name="idPeer" class="form-control" value="{{ publicKey }}"
                                placeholder='{{ publicKey }}' disabled>
                            <div class="input-group-append" id="qrbutton">
                                <button class="btn btn-outline-secondary" type="button" data-toggle="modal"
                                    data-target="#myModal">
                                    <i class="fas fa-qrcode"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="recipient">A:</label>
                        <input type="text" name="recipient" class="form-control" placeholder="Direccion de envio"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="amount" class="col-form-label">Cantidad:</label>
                        <input type="number" name="amount" class="form-control" placeholder="Monto" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Continuar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Qr de la wallet</h4>
                </div>
                <div class="modal-body">
                    <center>
                        <div id="canvas"></div>
                    </center>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>