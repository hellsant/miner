<div class="container p-5">
    <div class="col-md-7 offset-md-3">
        <form action="/send" method="post">
            <div class="card animated flipInY">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Send coins</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="idPeer">Tu Id waller:</label>
                        <input type="text" name="idPeer" class="form-control" placeholder='{{ publicKey }}' disabled>
                    </div>
                    <div class="form-group">
                        <label for="recipient">To:</label>
                        <input type="text" name="recipient" class="form-control" placeholder="enter address to send"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="amount" class="col-form-label">Enter Amount:</label>
                        <input type="number" name="amount" class="form-control" placeholder="amount to send" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Continue</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>