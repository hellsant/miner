<div class="container p-5">
    {{#if tx }}
    {{#each tx}}
    <div class="col align-self-center p-2">
        <div class="card animated flipInY">
            <div class="card-header bg-dark text-white text-center">
                <h5 class="card-title">transacciones pendientes<small class="text-muted"></small></h5>
                <div class="text-truncate">
                    <small>ID {{ id }}</small>
                </div>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span class="">Llave Publica Origen</span>
                    <br>
                    <div class="text-truncate" style="color:rgb(133, 126, 126)">
                        <small>{{ input.address }}</small>
                    </div>
                    <span class="">Fecha y Hora</span>
                    <br>
                    <div class="text-truncate" style="color:rgb(133, 126, 126)">
                        {{ input.timestamp}} <br>
                        <small>{{prettifyDate input.timestamp}}</small>
                    </div>
                </li>
            </ul>
            <ul class="list-group list-group-flush">
                {{#each outputs}}
                {{#if @first}}
                {{else}}
                <li class="list-group-item">
                    <span class="">Llave PÃºblica Destino</span>
                    <br>
                    <div class="text-truncate" style="color:rgb(90, 122, 90);">
                        <small>{{ address }}</small>
                    </div>
                    <span class="">Monto a Enviar</span>
                    <br>
                    <div class="text-truncate" style="color:rgb(136, 71, 71);">
                        <small>{{ amount }}</small>
                    </div>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="card-header bg-dark text-white text-center">
        <h5 class="card-title">No existe transacciones pendientes<small class="text-muted"></small></h5>
    </div>
    {{/if}}
</div>